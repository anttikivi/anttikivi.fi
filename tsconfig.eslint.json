{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Bundler",
    "noEmit": true,
    "strict": true,
    "typeRoots": ["types"]
  },
  "include": ["assets/**/*.js", "types/**/*.d.ts"]
}
