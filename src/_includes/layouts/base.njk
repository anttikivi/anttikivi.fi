<!doctype html>
<html lang="{{ lang }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    {% if isHome -%}
      <title>{{ config.title }} - {{ config.subtitle }}</title>
    {%- else -%}
      <title>{{ title }} - {{ config.title }}</title>
    {%- endif -%}

    {% if description %}
      <meta name="description" content="{{ description }}" />
    {% else %}
      <meta name="description" content="{{ config.description }}" />
    {% endif %}

    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
    <link href="/favicon.ico" rel="alternate icon" sizes="16x16" />
    <link href="/favicon-32x32.png" rel="icon" sizes="32x32" type="image/png" />
    <link href="/favicon-16x16.png" rel="icon" sizes="16x16" type="image/png" />
    <link href="/apple-touch-icon.png" rel="apple-touch-icon" sizes="180x180" />

    <link href="{{ config.baseUrl }}{{ page.url }}" rel="canonical" />

    <link
      rel="alternate"
      hreflang="{{ lang }}"
      href="{{ config.baseUrl }}{{ page.url }}"
    />
    {% for link in page.url | locale_links %}
      <link
        rel="alternate"
        hreflang="{{ link.lang }}"
        href="{{ config.baseUrl }}{{ link.url }}"
      />
    {% endfor %}
    {% if lang === "fi" %}
      <link
        rel="alternate"
        hreflang="x-default"
        href="{{ config.baseUrl }}{{ page.url }}"
      />
    {% else %}
      {% for link in page.url | locale_links %}
        {% if link.lang === "fi" %}
          <link
            rel="alternate"
            hreflang="x-default"
            href="{{ config.baseUrl }}{{ link.url }}"
          />
        {% endif %}
      {% endfor %}
    {% endif %}

    {% if isHome -%}
      <meta
        property="og:title"
        content="{{ config.title }} - {{ config.subtitle }}"
      />
    {%- else -%}
      <meta property="og:title" content="{{ title }} - {{ config.title }}" />
    {%- endif -%}

    {% if description %}
      <meta property="og:description" content="{{ description }}" />
    {% else %}
      <meta property="og:description" content="{{ config.description }}" />
    {% endif %}
    {# TODO: Add og:type #}
    <meta property="og:url" content="{{ config.baseUrl }}{{ page.url }}" />
    <meta property="og:image" content="/opengraph-{{ lang }}.png" />
    {# TODO: Add og:locale #}
    <meta property="og:site_name" content="{{ config.title }}" />

    <link href="/main.css" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,400;0,700;1,400&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Manrope:wght@200..800&display=swap"
      rel="stylesheet"
    />

    <script
      defer
      data-domain="anttikivi.fi"
      src="https://tullius.visiosto.fi/js/script.js"
    ></script>
  </head>
  <body
    class="bg-gray-100 font-sans text-gray-900 dark:bg-gray-900 dark:text-gray-100"
  >
    <a class="sr-only focus:not-sr-only" href="#{{ t.mainID }}">
      {{- t.skipToContent -}}
    </a>
    <header>
      <div class="container flex items-center justify-between py-10">
        <a
          class="text-xl hover:underline focus:underline"
          href="{{ '/' | tUrl }}"
        >
          {%- if isHome -%}
            <h1>{{- config.title -}}</h1>
          {%- else -%}
            {{- config.title -}}
          {%- endif -%}
        </a>
      </div>
    </header>
    <main id="{{ t.mainID }}">{{ content | safe }}</main>
    <footer>
      <div class="container">
        {% if page.fileSlug !== "404" -%}
          <ul
            class="my-12 flex flex-col items-center md:my-8"
            role="menu"
            aria-label="{{- t.footer.languageMenuLabel -}}"
          >
            {% for link in page.url | locale_links %}
              {% if not config.disabledLocales.includes(locale) -%}
                <li lang="{{- link.lang -}}" role="menuitem">
                  <a
                    class="text-green-950 dark:text-green-100 underline hover:text-green-700 hover:no-underline focus:text-green-700 focus:no-underline hover:dark:text-green-400 focus:dark:text-green-400"
                    href="{{- link.url -}}"
                  >
                    {{- link.lang -}}
                  </a>
                </li>
              {% endif -%}
            {% endfor -%}
          </ul>
        {% endif -%}
        <div
          class="flex flex-col-reverse items-center justify-between py-10 sm:flex-row"
        >
          <div
            class="my-12 flex flex-col items-center justify-start gap-4 sm:flex-row sm:gap-2 md:my-0"
          >
            <a
              class="logo text-gray-900 hover:text-green-700 focus:text-green-700 dark:text-gray-100 hover:dark:text-green-400 focus:dark:text-green-400"
              href="{{ '/' | tUrl }}"
            >
              LOGO
            </a>
            <span>Â© 2024 Antti Kivi</span>
          </div>
          <div></div>
        </div>
      </div>
    </footer>
  </body>
</html>
