---
import type { Locale } from "@/locales";
import { getRoute } from "@/routes";

interface Props {
  class?: string;
  href: string;
  locale?: Locale;
}

const { class: className, href, locale = Astro.currentLocale } = Astro.props;
---

<a
  class:list={[
    "underline hover:text-peach-700 hover:no-underline focus:text-peach-700 focus:no-underline dark:hover:text-peach-400 dark:focus:text-peach-400",
    className,
  ]}
  href={getRoute(locale as Locale, href)}><slot /></a
>
